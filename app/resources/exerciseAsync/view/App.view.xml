<mvc:View controllerName="sap.sample.exerciseAsync.controller.App" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc"
	height="100%">
	<ScrollContainer id="contaier" height="100%" width="100%" horizontal="true" vertical="true">
		<Panel id="panel" headerText="Node.js Async Test Framework" expandable="true" expanded="true">
			<l:VerticalLayout id ="layout1" class="sapUiContentPadding" width="100%">
				<l:content>
					<TextArea id="chatInfo" value="{chatModel>/chat}" cols="60" rows="8" editable="false"/>
				</l:content>
			</l:VerticalLayout>
			<Button id="btnAsync" text="Basic Async" press="sendBasic"/>
			<Button id="btnFileSync" text="File Sync" press="sendFileS"/>
			<Button id="btnFileAsync" text="File Async" press="sendFileA"/>
			<Button id="btnHTTPClient1" text="HTTP Client" press="sendHTTP"/>
            <Button id="btnHTTPClient2" text="HTTP Client Async" press="sendHTTP2"/>
			<Button id="btnDB1" text="DB1" press="sendDB1"/>
			<Button id="btnDB2" text="DB2" press="sendDB2"/>
		</Panel>
	</ScrollContainer>
</mvc:View>